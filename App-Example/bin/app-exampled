#!/usr/bin/env perl6

use v6;
use Lingua::EN::Numbers::Ordinal;

subset Verbosity of Int where 0 <= * <= 9 ;
#subset Verbosity of Int where { 0 <= * <= 9 };

#| Deamonize myself
sub MAIN (Bool :d(:$daemonize), Verbosity :v(:$verbose) = 0 ) {
    say "I'm a daemon!" if $daemonize;
    say "I'm shouty at the {ordinal($verbose)} level";
}

